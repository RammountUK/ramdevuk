{% capture buttonLink %}{% include 'shortcode-render' render:'url' default:'' %}{% endcapture %}
{% capture title %}{% include 'shortcode-render' render:'title' default:'' %}{% endcapture %}
{% capture description %}{% include 'shortcode-render' render:'description' default:'' %}{% endcapture %}
{% if title != '' %}
<div class='w-full md:w-2/3 pt-8 md:pt-12 px-0 md:px-6'>
  <h4 class="text-red mb-2 text-lg"> {{title}}</h4>
  <p class="desc">{{description}}</p>
  <a class="transition-all duration-300 ease-in mt-2 inline-block text-white text-center p-3 min-w-[200px] bg-red border-2 solid border-red hover:text-red hover:bg-white" href="{{buttonLink}}" target="_blank">Apply</a>
</div>
{% endif %}
