<qty-selector class="relative flex flex-grow border mx-auto border-[#b7b7b7] rounded h-full items-center">
    <button
        {% if item != blank %}
            data-qty="{{ item.quantity | minus: 1 }}"
            data-update="{{ item.key }}"
            data-minus-qtt
        {% else %}
            data-decrement
        {% endif %}
        type="button"
        class="h-5 w-5 bg-[#c4c4c4]  transition-all duration-300 ease-in hover:scale-125 rounded-full  absolute -left-7 flex-grow flex items-center justify-center w-5 h-full p-1 py-2.5"
        aria-label="Increment Quantity"
    >
        <span class="block w-2 text-white">
            {% render 'icons' icon: 'minus' %}
        </span>
    </button>
    <input
        type="number"
        class="flex-grow w-12 h-full font-heading  text-sm text-[#333] border-[#ccc] rounded-none text-center md:px-2 uppercase tracking-wide bg-transparent"
        data-keyqty
        data-key="{{ item.key }}"
        data-qty
        {% if item != blank %}
            value="{{ item.quantity }}"
        {% else %}
            value="1"
        {% endif %}
        id="product_qty-{{ product.handle }}"
    >
   
    <label class="sr-only" for="product_qty-{{ product.handle }}">Quantity of {{ product.title }} to Add</label>
    <button
        {% if item != blank %}
            data-qty="{{ item.quantity | plus: 1 }}"
            data-update="{{ item.key }}"
            data-plus-qtt
        {% else %}
            data-increment
        {% endif %}
        type="button"
        class="flex-grow flex items-center justify-center h-full transition-all duration-300 ease-in hover:scale-125 h-5 w-5 bg-[#262626] rounded-full  absolute -right-7 p-1 py-2.5"
        aria-label="Increment Quantity"
    >
        <span class="block w-2 text-white">
            {% render 'icons' icon: 'plus' %}
        </span>
    </button>
    
</qty-selector>

