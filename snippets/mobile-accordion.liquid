<content-accordion>
    <div class="flex flex-col text-xs pt-6 sm:pt-0">
        <div class="">
            <div class="flex flex-col border-gray border-b border-current text-xs">
                <button data-toggle="{{ section.settings.shop_menu.title }}" class="flex items-center justify-between text-left w-full font-semibold pt-[20px] border-gray border-t text-[16px]">
            <span class="block w-4/5 uppercase font-bold pb-2">{{ section.settings.shop_menu.title }}</span>
            <div data-icon class="relative w-3 h-3">
                <span class="bg-gray absolute w-full h-[1px] top-1/2 transition duration-500 transform -translate-y-1/2 rotate-90"></span>
                <span class="bg-gray absolute w-full h-[1px] top-1/2 transition duration-500 transform -translate-y-1/2"></span>
            </div>
        </button>
                <ul data-content="{{ section.settings.shop_menu.title }}" class="flex flex-col h-0 menu overflow-hidden text-[#bcbcbc] pl-[12px] pr-[8px] mb-[12px]">
                    {% for link in section.settings.shop_menu.links %}
                    <li class="py-2">
                        {% if link.levels == 0 %}
                        <a class="transition-short border-b border-transparent hover:border-current"
                            href="{{ link.url }}">{{ link.title }}</a>
                        {% endif %}
                        {% if link.levels > 0 %}
                        <a class="uppercase font-bold text-white pb-2">{{ link.title }}</a>
                        {% endif %}
                        {% if link.levels > 0 %}
                        <ul class="pb-[12px]" data-content>
                            {% for child_link in link.links %}
                            <li class="block">
                                <a class="inline-block my-1 transition-short border-b border-transparent hover:border-current"
                                    href="{{ child_link.url }}">{{ child_link.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="flex flex-col border-b border-gray border-current text-xs">
            <button data-toggle="{{ section.settings.collections_menu.title }}" class="flex items-center justify-between text-left w-full border-gray font-semibold pt-[20px] text-[16px]">
                <span class="block w-4/5 uppercase font-bold pb-2">{{ section.settings.collections_menu.title }}</span>
                <div data-icon class="relative w-3 h-3">
                    <span class="bg-gray absolute w-full h-[1px] top-1/2 transition duration-500 transform -translate-y-1/2 rotate-90"></span>
                    <span class="bg-gray absolute w-full h-[1px] top-1/2 transition duration-500 transform -translate-y-1/2"></span>
                </div>
            </button>
            <div data-content="{{ section.settings.collections_menu.title }}" class="h-0 wrapper overflow-hidden pl-[12px] pr-[8px] mb-[12px]">
                <ul class="flex flex-col menu text-[#bcbcbc]">
                    {% for link in section.settings.collections_menu.links %}
                    <li class="block py-2">
                        <a class="transition-short border-b border-transparent hover:border-current"
                            href="{{ link.url }}">{{ link.title }}</a>
                        {% if link.levels > 0 %}
                        <ul class="py-6 pl-8">
                            {% for child_link in link.links %}
                            <li class="block py-2">
                                <a class="inline-block my-1 transition-short border-b border-transparent hover:border-current"
                                    href="{{ child_link.url }}">{{ child_link.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</content-accordion>