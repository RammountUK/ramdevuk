<div class="{% unless section.settings.full_width %}container{% endunless %} {{ section.settings.mobile_vertical_padding }} {{ section.settings.mobile_horizontal_padding }} {{ section.settings.desktop_vertical_padding }} {{ section.settings.desktop_horizontal_padding }} {{section.settings.section_class}}">
  <div class="flex flex-col">
    {% render 'section-copy' %}
  </div>
  <div class="relative w-full">
    <div class="flex flex-wrap justify-start w-full {{ section.settings.column_padding }} gap-y-10 md:gap-y-20">
      {% for block in section.blocks %}
          <div
           
            class="flex flex-wrap relative overflow-hidden group w-full {{ block.settings.content_position }} {{ block.settings.column_text_alignment }} {{ block.settings.content_position_dt }} {{ block.settings.mobile_col_span }} {{ block.settings.mobile_row_span }} w-full md:w-1/2 {{ block.settings.desktop_col_span }}  {{ block.settings.desktop_col_span }}-column"
          >

            <div class="flex flex-wrap flex-col w-full px-4">
                 
                  {% if block.settings.event_date != blank %}
                    <div class="w-full transform transition-short font-heading text-base font-light text-[#707070]">
                      {{ block.settings.event_date }}
                    </div>
                  {% endif %}
                  {% if block.settings.event_title != blank %}
                    <div class="w-full transform transition-short {{ section.settings.tile_font_family }} {{ block.settings.mobile_heading_font_size }} {{ block.settings.desktop_heading_font_size }} font-medium">
                      {{ block.settings.event_title }}
                      <span class="block leading-none md:w-1/2 h-1 border-b-2 border-red border-solid"></span>
                    </div>
                  {% endif %}
                  {% if block.settings.event_location != blank %}
                    <div class="mt-3 w-full transform transition-short {{ section.settings.tile_font_family }} {{ block.settings.desktop_content_font_size }} {{ block.settings.mobile_content_font_size }} font-light" >
                      {{ block.settings.event_location }}
                    </div>
                  {% endif %}
                  {% if block.settings.event_link != blank %}
                    <a class="btn-event mt-3" href="{{block.settings.event_link}}" target="_blank">
                      {{ block.settings.event_info }}
                    </a>
                  {% endif %}

                </div>

          </div>
         
      {% endfor %}
    </div>
  </div>
</div>

