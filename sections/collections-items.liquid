<div class="{% unless section.settings.full_width %}container{% endunless %} overflow-hidden {{ section.settings.mobile_vertical_padding }} {{ section.settings.mobile_horizontal_padding }} {{ section.settings.desktop_vertical_padding }} {{ section.settings.desktop_horizontal_padding }} {{section.settings.section_class}}">
  <div class="flex flex-col">
    {%  liquid
      assign heading_tag = section.settings.heading_tag
      assign heading = section.settings.heading
    %}

    {% if section.settings.heading != blank %}
        <div style="padding-bottom: {{ section.settings.heading_bottom_spacing }}px;" class="w-full {{ section.settings.text_alignment }} {{ section.settings.mobile_heading_font_size }} {{ section.settings.desktop_heading_font_size }} {{ section.settings.heading_font_family }}">
        <{{ heading_tag | default: 'h2' }}>
            {{ heading  | remove: '<p>'  | remove: '</p>'  }}
        </{{ heading_tag }}>
        <div class="mt-2.5 text-underline border-b-2 border-red border-solid w-[150px] "></div>
        </div>
    {% endif %}
    {% if section.settings.copy != blank %}
        <div style="padding-bottom: {{ section.settings.copy_bottom_spacing }}px;" class="w-full {{ section.settings.text_alignment }} {{ section.settings.mobile_copy_font_size }} {{ section.settings.desktop_copy_font_size }} {{ section.settings.copy_font_family }}">{{ section.settings.copy }}</div>
    {% endif %}
  </div>
  <div class="grid {{ section.settings.grid_gap }} {{ section.settings.grid_columns }} {{ section.settings.grid_columns_dt }}">
    {% for block in section.blocks %}
      {% liquid
        assign collection = block.settings.collection
        assign image = collection.featured_image
        assign url = collection.url
        assign heading = collection.title

        if block.settings.image != blank
            assign image = block.settings.image
        endif
        if block.settings.heading != blank
            assign heading = block.settings.heading
        endif
        if block.settings.url != blank
            assign url = block.settings.url
        endif
      %}

        <div id="block-{{ block.id }}" class="overflow-hidden group w-full relative">
          <a class="btn-{{ block.id }}" href="{{ url }}">
            <div class="p-4 flex flex-col justify-start bg-center bg-no-repeat bg-cover h-full w-full transform scale-100  transition-base">
              {% if image != blank %}
                {{ image | image_url: width: '275px' | image_tag: width: '275px', height: '275px', class: 'object-contain w-[75%] mx-auto' }}
              {% endif %}
              {% if heading != blank %}
                <div class="text-center text-[24px] font-medium  border-b-3 group-hover:border-red border-solid border-transparent">
                  {{ heading }}
                </div>
              {% endif %}
            </div>
          </a>
        </div>
    {% endfor %}
  </div>
</div>

