<div class="{% unless section.settings.full_width %}container{% endunless %} {{ section.settings.mobile_vertical_padding }} {{ section.settings.mobile_horizontal_padding }} {{ section.settings.desktop_vertical_padding }} {{ section.settings.desktop_horizontal_padding }} {{section.settings.section_class}}">
  <div class="flex flex-col">
    {% render 'section-copy' %}
  </div>
  <div class="pt-3/1 md:pt-3/4 relative w-full">
    <div class="absolute grid grid-cols-2 grid-rows-6 h-full left-0 top-0 md:grid-cols-3 md:grid-rows-3 w-full {{ section.settings.grid_gap }}">
      {% for block in section.blocks %}
          <div
            style="color: {{ block.settings.text_color }};"
            class="flex h-full p-8 relative overflow-hidden group w-full {{ block.settings.content_position }} {{ block.settings.content_position_dt }} {{ block.settings.mobile_col_span }} {{ block.settings.mobile_row_span }} {{ block.settings.desktop_col_span }} {{ block.settings.desktop_row_span }} shadow-ram hover:shadow-ramhov"
          >
            {{ block.settings.background_image | image_url: width: 1600 | image_tag: sizes: '1600px 300px', loading: 'lazy', class: 'absolute top-0 left-0 w-full h-full object-cover transform transition-base group-hover:scale-105' }}
            <div class="h-max w-max z-10">
              {% if block.settings.copy != blank %}
                <div class="transform transition-short {{ section.settings.tile_font_family }} {{ block.settings.mobile_heading_font_size }} {{ block.settings.desktop_heading_font_size }} font-medium" style="padding-bottom: {{ block.settings.copy_bottom_spacing }}px;">
                  {{ block.settings.copy }}
                </div>
              {% endif %}
              {% if block.settings.cta_label != blank and block.settings.cta_url != blank %}
                <a href="{{ block.settings.cta_url }}" class="btn-{{ block.id }} flex items-center justify-center font-thin text-center uppercase transition-short {{ block.settings.mobile_button_font_size }} {{ block.settings.desktop_button_font_size }}"><span class="block transform -rotate-90 mr-2 border-solid border-white border rounded-full w-4 h-4 p-1">{% render 'icons' icon: 'chevron' %}</span> <span>{{ block.settings.cta_label }}</span></a>
              {% endif %}
            </div>
          </div>
          {% style %}
            .btn-{{ block.id }} {
              color: {{ block.settings.button_text_color }}
            }
            .btn-{{ block.id }}:hover {
              color: {{ block.settings.button_text_color_hover }}
            }
          {% endstyle %}
      {% endfor %}
    </div>
  </div>
</div>

