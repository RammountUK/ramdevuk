<div class="{% unless section.settings.full_width %}container{% endunless %} {{ section.settings.mobile_vertical_padding }} {{ section.settings.mobile_horizontal_padding }} {{ section.settings.desktop_vertical_padding }} {{ section.settings.desktop_horizontal_padding }} {{section.settings.section_class}}">
  <div class="flex flex-col">
    {% render 'section-copy' %}
  </div>
  <div class="relative w-full">
    <custom-equalizer >
    <div class="flex flex-wrap justify-between gap-y-8 w-full {{ section.settings.column_padding }} ">
      {% for block in section.blocks %}
          <div
            style="color: {{ block.settings.text_color }};"
            class="flex flex-wrap h-full relative overflow-hidden  w-full {{ block.settings.content_position }} {{ block.settings.content_position_dt }} {{ block.settings.mobile_col_span }} {{ block.settings.mobile_row_span }} {{ block.settings.desktop_col_span }} transition-all duration-300 ease-in  {{ block.settings.desktop_col_span }}-column"
          >
            <custom-modal>
              <div class="flex items-center justify-center group cursor-pointer ">
                {% if block.settings.column_image != blank %}
                  <div class=" w-14 relative" data-modal-open>
                    <img src="{{ block.settings.column_image | image_url: height:300  }}"  class=' object-contain w-full object-center'/>
                  </div>
                {% endif %}
                {% if block.settings.copy != blank %}
                <div class="invisible ml-3 group-hover:visible transform transition-short {{ section.settings.tile_font_family }} {{ section.settings.mobile_copy_font_size }} {{ section.settings.desktop_copy_font_size }} font-medium" style="padding-bottom: {{ block.settings.copy_bottom_spacing }}px;">
                  {{ block.settings.copy }}
                </div>
              {% endif %}

              </div>

              <div data-modal-content class="hidden fixed bg-black/80 justify-center inset-x-1/2 top-0 -translate-x-1/2 z-40 w-full h-full">

                  <div data-inner-content class="w-full  overflow-scroll mt-14  w-[800px]  px-10 py-8 bg-white h-[700px] relative">
                    <div data-modal-close class="absolute right-4 top-4 cursor-pointer bg-black text-white w-10 h-10 rounded-full flex items-center justify-center text-lg leading-none ">x</div>
                    {{ block.settings.modal_form }}
                  </div>
              </div>
            </custom-modal>


          </div>
          {% style %}

            .btn-{{ block.id }} {
              color: {{ block.settings.button_text_color }}
            }
            .btn-{{ block.id }}:hover {
              color: {{ block.settings.button_text_color_hover }}
            }
          {% endstyle %}
      {% endfor %}
    </div>
    </custom-equalizer>
  </div>
</div>
{% style %}
  @media screen and (min-width: 750px) {
    .md\:w-1\/2-column{
      width:calc(50% - 1rem);
    }
    .md\:w-1\/3-column{
      width:calc(33% - 1rem);
    }
  }
