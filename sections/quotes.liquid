<div class="relative {{ section.settings.mobile_vertical_padding }} {{ section.settings.desktop_vertical_padding }} {{ section.settings.mobile_horizontal_padding }} {{ section.settings.desktop_horizontal_padding }}" style="background: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container flex flex-col">
    {% render 'section-copy' %}
  </div>
    <div class="flex items-center justify-center container {{ section.settings.slider_mobile_vertical_padding }} {{ section.settings.slider_desktop_vertical_padding }} {{ section.settings.slider_mobile_horizontal_padding }} {{ section.settings.slider_desktop_horizontal_padding }}">
        <quotes-slider class="max-w-3xl overflow-hidden text-center" data-speed="{{ section.settings.slider_speed | times: 1000 }}">
            <!-- Slider main container -->
            <div class="relative h-full text-lg" data-swiper>
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    {% for block in section.blocks %}
                        <div class="swiper-slide flex flex-col justify-center">
                            <div style="padding-bottom: {{ section.settings.quote_bottom_spacing }}px;" class="{{ section.settings.quote_font_family }}" style="">
                                "{{ block.settings.content }}"
                            </div>
                            <div class="{{ section.settings.attribution_font_family }}">
                                â€” {{ block.settings.attribution }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </quotes-slider>
    </div>
</div>

