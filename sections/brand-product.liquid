<div id="section-{{ section.id }}" class="{{ section.settings.text_alignment }} " style="background-color:{{section.settings.section_bg_color}};">
  <div class="container flex py-12 px-4 md:px-6 md:px-0 max-w-7xl items-center">
    <div class="hidden md:flex w-4/12 px-4">
      {% if section.settings.brand_image %}
        <img
                  srcset="{% if section.settings.brand_image.width >= 350 %}{{ section.settings.brand_image | img_url: '350x' }} 350w,{% endif %}
                    {% if section.settings.brand_image.width >= 750 %}{{ section.settings.brand_image | img_url: '750x' }} 750w,{% endif %}
                    {% if section.settings.brand_image.width >= 1100 %}{{ section.settings.brand_image | img_url: '1100x' }} 1100w,{% endif %}
                    {{ section.settings.brand_image | img_url: 'master' }} {{ section.settings.brand_image.width }}w"
                  src="{{ section.settings.brand_image | img_url: '750x' }}"
                  loading="lazy"
                  width="{{ section.settings.brand_image.width }}"
                  height="{{ section.settings.brand_image.height }}"
                  alt="{{ section.settings.brand_image.alt | escape }}"
                  class="w-full h-full object-cover" >
      {%- endif -%}
    </div>
    <div class="w-full md:w-8/12 md:px-4 lg:pl-[8.33%]">
        {%- if section.settings.heading != blank -%}
            <div class="pb-2.5 flex md:flex-row flex-col {% if section.settings.text_alignment_mobile == 'text-center'%}items-center{% endif %}">
                <div class="w-auto font-heading font-bold {{ section.settings.heading_font_size }} {{ section.settings.desktop_heading_font_size}} {{section.settings.text_alignment_mobile}} {{section.settings.text_alignment}} block">
                    {{section.settings.heading}}
                    {% if section.settings.has_underline %}
                        <div class="text-underline border-b-2 border-red border-solid w-[150px] "></div>
                    {%- endif -%}
                </div>
                {% if section.settings.button_link_3 %}
                <a href="{{ section.settings.button_link_3 }}" class="ml-4 btn-xs btn-inline {{ section.settings.btn_type_3 }}">{{section.settings.button_text_3}}</a>

                {% endif %}
            </div>
        {%- endif -%}
        <div>
            <span class="content rte font-sans font-light {{ section.settings.copy_font_size }}">
                {{ section.settings.copy}}
            </span>
        </div>
        <div class="btn-wrapper flex md:flex-row flex-col">
            {% if section.settings.button_link_1 %}
              <a href="{{ section.settings.button_link_1 }}" class="{{ section.settings.btn_type_1 }} w-full md:w-[280px] mt-5 p-2.5 text-center text-[15px]">{{section.settings.button_text_1}}</a>
            {% endif %}
            {% if section.settings.button_link_2 %}
              <a href="{{ section.settings.button_link_2 }}" class="{{ section.settings.btn_type_2 }} w-full md:w-[280px] mt-5 p-2.5 text-center text-[15px] md:ml-2.5">{{section.settings.button_text_2}}</a>
            {% endif %}
        </div>
      </div>
    </div>
</div>
