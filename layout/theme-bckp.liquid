<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="icon" href="{{ settings.favicon | image_url: width: 32 }}" type="image/x-icon"/>

    {%- unless settings.type_header_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>{{ shop.name }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    {% if template contains 'hide' %}
      <meta name="robots" content="noindex">
    {% endif %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {% render 'css_variables' %}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
    {{ 'fonts.css' | asset_url | stylesheet_tag: 'all', preload: 'true' }}
    {{ 'tailwind.css' | asset_url | stylesheet_tag: 'all', preload: 'true' }}
    {{ 'footer.css' | asset_url | stylesheet_tag: 'all', preload: 'true' }}
    {{ 'theme.css' | asset_url | stylesheet_tag: 'all', preload: 'true' }}


    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/styled-icons@10.45.0/" async="async"></script>
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <script src="{{ 'swiper.min.js' | asset_url }}" defer="defer"></script>

 <!--begin-boost-pfs-filter-css-->
   {% render 'boost-pfs-style' %}
 <!--end-boost-pfs-filter-css-->



  {% render 'shogun-head' %}
</head>

  <body class="flex flex-col min-h-screen w-screen font-body text-black">
    <a class="skip-to-content-link button sr-only" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    {% section 'header' %}

    <main id="MainContent" class="flex-grow w-screen overflow-hidden" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

 <!--begin-boost-pfs-js-->
   {% render 'boost-pfs' %}
 <!--end-boost-pfs-js-->

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>



    <script src="{{ 'global.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'quickshop.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'modal.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'share.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'carousel.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'product-tile.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'product-form.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'scrollAnimations.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'accordion.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'tab-accordion.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'equalizer.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'quote-slider.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'video.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'details-modal.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'tabs.js' | asset_url }}" async defer="defer"></script>
    <script src="{{ 'mount-builder.js' | asset_url }}" async defer="defer"></script>


    <script>
      let root = '{{ routes.root_url }}';
       if (root[root.length - 1] !== '/') {
         root = `${root}/`;
       }
      window.routes = {
        root_url: root,
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        shop_url : '{{ shop.url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      }
    </script>

    {%- comment -%} REPLACE TRADEMARK TEXT WITH <sup>$&</sup> {%- endcomment -%}
    {% if request.page_type != "captcha" %}

      <script>
        // Loop through all elements in body
        const allInBody = document.querySelectorAll('body > *');
        for (const element of allInBody) {
          element.innerHTML = element.innerHTML.replace(/[®©]/g, '<sup>$&</sup>').replace(/[™]/g, '<sup>$&</sup>');
        }


      </script>
    {% endif %}
<script>
    (function(){
        var s    = document.createElement('script');
        var h    = document.querySelector('head') || document.body;
        s.src    = 'https://acsbapp.com/apps/app/dist/js/app.js';
        s.async  = true;
        s.onload = function(){
            acsbJS.init({
                statementLink    : '',
                footerHtml       : '',
                hideMobile       : false,
                hideTrigger      : false,
                disableBgProcess : false,
                language         : 'en',
                position         : 'right',
                leadColor        : '#146FF8',
                triggerColor     : '#146FF8',
                triggerRadius    : '50%',
                triggerPositionX : 'right',
                triggerPositionY : 'bottom',
                triggerIcon      : 'people',
                triggerSize      : 'bottom',
                triggerOffsetX   : 20,
                triggerOffsetY   : 20,
                mobile           : {
                    triggerSize      : 'small',
                    triggerPositionX : 'right',
                    triggerPositionY : 'bottom',
                    triggerOffsetX   : 20,
                    triggerOffsetY   : 20,
                    triggerRadius    : '20'
                }
            });
        };
        h.appendChild(s);
    })();
</script>
</body>
</html>
